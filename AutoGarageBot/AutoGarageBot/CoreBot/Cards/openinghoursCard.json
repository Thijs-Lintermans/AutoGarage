{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Auto Garage",
              "weight": "Bolder",
              "size": "Large"
            },
            {
              "type": "TextBlock",
              "text": "Opening hours",
              "weight": "Bolder",
              "spacing": "None"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://i.postimg.cc/VsGSB9p9/logo-speedyfix.png",
              "size": "Medium",
              "altText": "Auto Garage Image"
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Visit us for your car repair needs during the following hours:",
      "wrap": true,
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "- Monday to Friday: 8:00 AM to 6:00 PM\n- Saturday: 9:00 AM to 3:00 PM\n- Sunday: **closed**",
      "wrap": true
    }
  ]
}
